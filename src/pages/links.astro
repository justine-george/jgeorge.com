---
// import { Image } from "astro:assets";

import SocialList from "@/components/SocialList";
import PageLayout from "@/layouts/Base";
// import aboutImg from "@/assets/about-astro.png";
import { projects } from "@/site-config";

const meta = {
	title: "Links",
	description: "I'm a starter theme for Astro.build",
};

const featuredProjects = projects.filter((project) => project.isFeatured && !project.isDisabled);
---

<PageLayout meta={meta}>
	<section class="space-y-6">
		<h1 class="title">Links</h1>
		<div>
			<p class="mb-4">
				Here's my
				<a
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					href="https://drive.google.com/file/d/1e2FBiYFpmFpnS23UB0Ym8NShkX4YZUVF/view?usp=drive_link"
				>
					resume
				</a>, and a couple of links to important things.
			</p>
		</div>
	</section>

	<section class="mt-8 space-y-6">
		<h1 class="title">Featured projects</h1>
		<ul class="mb-8 list-inside list-disc">
			{
				featuredProjects.map((project) => (
					<li>
						<a
							target="_blank"
							rel="noopener noreferrer"
							class="cactus-link inline-block"
							href={project.links.demo || project.links.github}
						>
							{project.title}
						</a>
						- {project.description}
					</li>
				))
			}
		</ul>
		<p class="mb-4">
			<a href="/projects" aria-label="View all projects" class="sm:hover:text-accent"
				>View all projects →</a
			>
		</p>
	</section>

	<section class="mt-8 space-y-6">
		<h1 class="title">Featured posts</h1>
		<ul class="mb-8 list-inside list-disc">
			<li>
				<a
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					href="https://chromewebstore.google.com/detail/tab-keeper-chrome-tab-man/gpibgniomobngodpnikhheifblbpbbah?ref=jgeorgeportfolio"
					>Tab Keeper</a
				>
				 - Efficiently save and synchronize chrome tabs across devices without the need for personal
				logins (Featured on Chrome Web Store)
			</li>
			<li>
				<a
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					href="https://github.com/justine-george/book-fellow-backend-spring">Book Fellow</a
				>
				 - A social media platform for book lovers to share their favorite books and connect with
				other readers
			</li>
		</ul>
		<p class="mb-4">
			<a href="/posts" aria-label="View all posts" class="sm:hover:text-accent">View all posts →</a>
		</p>
	</section>
	<section class="mt-8 space-y-6">
		<SocialList />
	</section>

